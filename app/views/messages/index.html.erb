<div id="chat" data-controller="chat" data-chat-username="<%= Current.username %>">

  <div id="login" class="text-right py-3">
    Logged in as <%= Current.username %>. <%= link_to "Log Out", login_path, method: :delete %>
  </div>

  <div id="messages" data-target="chat.messages">
    <%= render @messages %>
  </div>

  <div id="chat_controls" class="p-4">
    <%= form_with model: Message.new,
                  id: "chat_form",
                  html: {
                    autocomplete: "off"
                  },
                  data: {
                    target: "chat.form"
                  } do |f|
    %>
      <div class="form-row">
        <div class="col-md-10">
          <%= f.text_field :content, class: "form-control", placeholder: "ðŸ’¬" %>
        </div>
        <div class="col-md-2">
          <%= f.submit "Send", class: "btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>


</div>
